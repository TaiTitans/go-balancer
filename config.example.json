{
  "server": {
    "port": 8080,
    "readTimeout": "15s",
    "writeTimeout": "15s",
    "idleTimeout": "60s"
  },
  "backends": [
    {
      "url": "http://localhost:8081",
      "weight": 3
    },
    {
      "url": "http://localhost:8082",
      "weight": 2
    },
    {
      "url": "http://localhost:8083",
      "weight": 1
    }
  ],
  "healthCheck": {
    "interval": "10s",
    "timeout": "5s",
    "path": "/health"
  },
  "strategy": {
    "type": "roundrobin"
  },
  "logging": {
    "level": "info",
    "format": "text"
  }
}
